<h3>Let's create a label</h3>
<%= form_for @label, html: { class: "form-horizontal" }, url: { action: "create" } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :position, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :position %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit "Send", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<div>
  <%= link_to 'All Labels', labels_path %>
</div>
